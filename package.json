{
  "name": "@silkide/vepa-mcp",
  "version": "1.0.0",
  "description": "A MCP server designed for projects based on vue-element-plus-admin, integrating component documentation, project specifications, and template files into the AI's context.",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "targets": {
    "main": {
      "context": "node",
      "outputFormat": "esmodule",
      "engines": {
        "node": ">=18"
      },
      "sourceMap": true
    }
  },
  "scripts": {
    "prepublishOnly": "pnpm build",
    "build": "rimraf dist && parcel build",
    "dev": "parcel watch",
    "start": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Heithon/VEPA-MCP.git"
  },
  "keywords": [
    "mcp",
    "context7",
    "vue-element-plus-admin",
    "admin",
    "ai"
  ],
  "author": "Silkide",
  "license": "ISC",
  "type": "module",
  "files": [
    "dist"
  ],
  "bin": {
    "vepa-mcp": "dist/index.js"
  },
  "bugs": {
    "url": "https://github.com/Heithon/VEPA-MCP/issues"
  },
  "homepage": "https://github.com/Heithon/VEPA-MCP#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "commander": "^14.0.0",
    "undici": "^7.15.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "parcel": "^2.15.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  }
}
